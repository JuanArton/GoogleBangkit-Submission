<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".NotificationSettingActivity">

    <Switch
        android:id="@+id/switchAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reminder"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:id="@+id/bellIcon"
        android:src="@drawable/ic_baseline_notifications_off_24"
        android:layout_marginTop="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/switchAlarm">
    </ImageView>

    <TextView
        android:id="@+id/notifstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchAlarm"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/bellIcon"
        android:layout_toRightOf="@+id/bellIcon"
        android:text="@string/notifstatoff">
    </TextView>
</RelativeLayout>